DATABASE ../database/phreeqc.dat
SELECTED_OUTPUT 101
    -file                 surf_related_warnings_101.sel
USER_PUNCH 101
    -headings Mu SC
    -start
10 PUNCH STR_F$(MU, 20, 12)
20 PUNCH STR_F$(SC, 20, 10)
    -end

# OK, surface defined with charge balance master species
# and surface formula included in phase
EQUILIBRIUM_PHASES 1 
 Goethite 0 .1 
SOLUTION 1 
 Na 1; Cl 1 
SAVE solution 1
USER_PRINT
 10 print sys("Cl"), sys("H"), sys("H") - get(1)
 20 put(sys("H"), 1)
END
SURFACE 1 
 Hfo_wOH Goethite 1e-2 2e3 ; -donnan # can be added, wonderful! 
 -equil 1
END
USE solution 1
USE surface 1
USE equilibrium_phases 1
Reaction
	HCl 1
	5
END 

# Surface formula not master species
EQUILIBRIUM_PHASES 1 
 Goethite 0 .1 
SOLUTION 1 
 Na 1; Cl 1 
SAVE solution 1
USER_PRINT
 10 print sys("Cl"), sys("H"), sys("H") - get(1)
 20 put(sys("H"), 1)
END
SURFACE 1 
 Hfo_w Goethite 1e-2 2e3 ; -donnan # can be added, wonderful! 
 -equil 1
END
USE solution 1
USE surface 1
USE equilibrium_phases 1
Reaction
	HCl 1
	5
END 


# Surface formula not contained in mineral
EQUILIBRIUM_PHASES 1 
 Hematite 0 .1 
SOLUTION 1 
 Na 1; Cl 1 
SAVE solution 1
USER_PRINT
 10 print sys("Cl"), sys("H"), sys("H") - get(1)
 20 put(sys("H"), 1)
END
SURFACE 1 
 Hfo_wOH Hematite 1e-2 2e3 ; -donnan # can be added, wonderful! 
 -equil 1
END
USE solution 1
USE surface 1
USE equilibrium_phases 1
Reaction
	HCl 1
	5
END 

# Surface master species not charge balanced 
SURFACE_MASTER_SPECIES
Hfo_s Hfo_sO-
SURFACE_SPECIES
Hfo_sO- = Hfo_sO-
log_k 0

Hfo_sO- + H+ = Hfo_sOH
log_k -100
END
EQUILIBRIUM_PHASES 1 
 Goethite 0 .1 
SOLUTION 1 
 Na 1; Cl 1 
SAVE solution 1
USER_PRINT
 10 print sys("Cl"), sys("H"), sys("H") - get(1)
 20 put(sys("H"), 1)
END
SURFACE 1 
 Hfo_sO- Goethite 1e-2 2e3 ; -donnan # can be added, wonderful! 
 -equil 1
END
USE solution 1
USE surface 1
USE equilibrium_phases 1
Reaction
	HCl 1
	5
END 

# Infeasible, Cl will be negative
EQUILIBRIUM_PHASES 1 
 Goethite 0 .1 
SOLUTION 1 
 Na 1; Br 1; Cl 1e-6 
SAVE solution 1
USER_PRINT
 10 print sys("Cl"), sys("H"), sys("H") - get(1)
 20 put(sys("H"), 1)
END
SURFACE 1 
 Hfo_wCl Goethite 1e-2 2e3 ; -donnan # can be added, wonderful! 
 -equil 1
END
USE solution 1
USE surface 1
USE equilibrium_phases 1
Reaction
	HBr 1
	5
END 