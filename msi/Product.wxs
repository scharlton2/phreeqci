        <File Id="phreeqci.eng" Name="phreeqci.eng" Source="..\phreeqci.eng" />        
        <File Id="ZedGraph.dll" Name="ZedGraph.dll" Source="..\phreeqc3\src\phreeqc\ZedGraph.dll" />        
      </Component>
    </DirectoryRef>

    <!-- Shortcuts -->
    <DirectoryRef Id="ApplicationProgramsFolder">
