      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="$(var.FullName)"/>
      </Directory>
    </Directory>

    <!-- top dir -->
    <DirectoryRef Id="APPLICATIONFOLDER">
